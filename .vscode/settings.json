{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "ruff.path": ["${workspaceFolder}/.venv/bin/ruff"],
  "ruff.args": ["--config=${workspaceFolder}/pyproject.toml"],
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
  "python.linting.mypyArgs": ["--config=${workspaceFolder}/pyproject.toml"],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
  "python.formatting.blackArgs": ["--config=${workspaceFolder}/pyproject.toml"],
  "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
  "python.testing.pytestArgs": ["--config=${workspaceFolder}/pyproject.toml"],
  "files.insertFinalNewline": true,
  "autoDocstring.docstringFormat": "numpy"
}
